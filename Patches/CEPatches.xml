<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ========== SharpClaws ========== -->

<Operation Class="PatchOperationFindMod">
  <mods>
    <li>Combat Extended</li>
  </mods>
	<match Class="PatchOperationSequence">
	  <operations>
		<li Class="PatchOperationReplace">
			<xpath>Defs/HediffDef[defName="BTEMa_SharpClaws"]/comps/li/tools</xpath>
			<value>
				<tools>

					<li Class="CombatExtended.ToolCE">
						<label>claws</label>
						<capacities>
							<li>Cut</li>
						</capacities>
						<power>8</power>
						<cooldownTime>0.75</cooldownTime>
						<armorPenetrationSharp>1.2</armorPenetrationSharp>
					<soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
					<soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
					 <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						
					</li>
				</tools>
			</value>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>Defs/HediffDef[defName="BTEMa_HeavyHooves"]/comps/li/tools</xpath>
			<value>
				<tools>

					<li Class="CombatExtended.ToolCE">
						<label>hoof</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>15</power>
						<cooldownTime>2.0</cooldownTime>
						<armorPenetrationBlunt>10</armorPenetrationBlunt>
					<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
					<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					 <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						
					</li>
				</tools>
			</value>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>Defs/HediffDef[defName="BTEMa_ElongatedFangs"]/comps/li/tools</xpath>
			<value>
				<tools>

					<li Class="CombatExtended.ToolCE">
						<label>bite</label>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>12</power>
						<cooldownTime>1.5</cooldownTime>
						<armorPenetrationSharp>5</armorPenetrationSharp>
					<soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
					<soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
					 <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						
					</li>
				</tools>
			</value>
		</li>
	  </operations>
	</match>
</Operation>
</Patch>